/* --- AJUSTE DE RESPONSIVIDADE (Desktop - min-width: 768px) --- */

@media (min-width: 768px) {
    
    /* Na versão desktop, queremos a descrição da empresa ao lado dos valores */
    #empresa {
        display: flex;
        gap: 40px;
    }
    .intro-empresa {
        flex: 1; /* Ocupa metade do espaço */
        margin-bottom: 0;
    }
    .valores {
        flex: 1; /* Ocupa a outra metade */
    }
    
    /* O formulário de contato pode ter um tamanho máximo no desktop */
    .form-contato {
        max-width: 600px;
        margin: 0 auto;
    }
}
